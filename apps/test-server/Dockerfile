# Build the docker image with `npx nx docker-build test-server`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t test-server`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system test-server && \
          adduser --system -G test-server test-server

COPY dist/apps/test-server test-server
RUN chown -R test-server:test-server .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix test-server --omit=dev -f install

CMD [ "node", "test-server" ]
